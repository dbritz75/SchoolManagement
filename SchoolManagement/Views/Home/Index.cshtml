@{
    ViewBag.Title = "Student Management 1.0 - Home Page";
}

    <div class="jumbotron">
        <h1>Big Dave's Student Management Thingie</h1>
        <p class="lead">Welcome to our student management system. We just started so it really sucks. But it will get better we promise.</p>
        @*<p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>*@
    </div>

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Content/Images/cat-book.jpg" class="d-block w-25" alt="cat+book">
            </div>
            <div class="item">
                <img src="~/Content/Images/children-book.jpg" class="d-block w-25" alt="childrenbook">
            </div>
            <div class="item">
                <img src="~/Content/Images/geometry.jpg" class="d-block w-25" alt="geometry">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="false"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="false"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>



<div class="row">
    <div class="col-md-6">
        <h2>Courses</h2>
        <p>
            Here are some cool courses!
        </p>
        <p>@Html.ActionLink("Learn More","Index","Courses", null, new {@class = "btn btn-primary" })</p>
    </div>
    <div class="col-md-6">
        <h2>Students</h2>
        <p>See students here.</p>
        <p>@Html.ActionLink("All Students", "Index", "Students", null, new {@class = "btn btn-info" })</p>
    </div>
</div>

